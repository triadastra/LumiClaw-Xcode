<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  Info.plist for LumiAgentIOS
  ──────────────────────────────────────────────────────────────
  In Xcode 15+, open the target's Info tab and add these keys,
  OR copy this file to the project root and reference it in
  Build Settings → Info.plist File.

  Required permissions:
    • NSLocalNetworkUsageDescription  — Bonjour discovery of macOS LumiAgent
    • NSBonjourServices               — _lumiagent._tcp service type
    • NSLocationWhenInUseUsageDescription — Open-Meteo weather location

  Optional / recommended:
    • UIBackgroundModes audio          — keeps media controller alive in background
-->
<plist version="1.0">
<dict>
    <!-- ── Display name ── -->
    <key>CFBundleDisplayName</key>
    <string>LumiAgent</string>

    <key>CFBundleName</key>
    <string>LumiAgentIOS</string>

    <key>CFBundleIdentifier</key>
    <string>com.lumiagent.ios</string>

    <key>CFBundleVersion</key>
    <string>1</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- ── Minimum iOS version ── -->
    <key>MinimumOSVersion</key>
    <string>17.0</string>

    <!-- ── Orientation ── -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- ── Privacy — Local Network (Bonjour) ── -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>LumiAgent needs local network access to discover and control your Mac.</string>

    <!-- Bonjour service types to browse -->
    <key>NSBonjourServices</key>
    <array>
        <string>_lumiagent._tcp</string>
    </array>

    <!-- ── Privacy — Location (weather) ── -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>LumiAgent uses your location to show current local weather conditions.</string>

    <!-- ── Background modes ── -->
    <key>UIBackgroundModes</key>
    <array>
        <!-- Keeps media controller responsive when app is backgrounded -->
        <string>audio</string>
    </array>

    <!-- ── App Transport Security ── -->
    <!-- Open-Meteo uses HTTPS so no ATS exceptions needed -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>

    <!-- ── Scene manifest ── -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict/>
    </dict>

    <!-- ── Launch screen ── -->
    <key>UILaunchScreen</key>
    <dict>
        <key>UIColorName</key>
        <string>AccentColor</string>
    </dict>
</dict>
</plist>
